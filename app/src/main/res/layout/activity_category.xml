<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/baseline_circle_24"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:background="@drawable/baseline_clear_24"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="18dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp">

<!--        나이-->
        <TextView
            android:id="@+id/ageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textSize="27dp"
            android:textColor="#000000"/>

        <RelativeLayout
            android:layout_below="@+id/ageTitle"
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 10"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 20"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 30"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 40"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

<!--        장소-->
        <TextView
            android:id="@+id/placeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소"
            android:textSize="27dp"
            android:textColor="#000000"
            android:layout_below="@+id/age"/>

        <RelativeLayout
            android:layout_below="@+id/placeTitle"
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 학교"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 직장"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 집"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 식당"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

<!--        인간관계-->
        <TextView
            android:id="@+id/relationshipTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인간관계"
            android:textSize="27dp"
            android:textColor="#000000"
            android:layout_below="@+id/place"/>

        <RelativeLayout
            android:layout_below="@+id/relationshipTitle"
            android:id="@+id/relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 친구"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 가족"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 회사"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 연애"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

<!--        건강-->
        <TextView
            android:id="@+id/healthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건강"
            android:textSize="27dp"
            android:textColor="#000000"
            android:layout_below="@+id/relationship"/>

        <RelativeLayout
            android:layout_below="@+id/healthTitle"
            android:id="@+id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 나이"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 운동"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 병원"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 식단"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

<!--        미래-->
        <TextView
            android:id="@+id/futureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미래"
            android:textSize="27dp"
            android:textColor="#000000"
            android:layout_below="@+id/health"/>

        <RelativeLayout
            android:layout_below="@+id/futureTitle"
            android:id="@+id/future"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 꿈"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 직업"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 계획"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/category_circle"
                    android:text="# 설득"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>