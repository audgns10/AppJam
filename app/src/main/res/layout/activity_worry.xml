<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorryActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/baseline_circle_24"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@drawable/round_dehaze_24"
                android:layout_margin="22dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/baseline_circle_24"
                android:layout_alignParentEnd="true"/>

<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/baseline_person_24"-->
<!--                android:layout_alignParentEnd="true"/>-->

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="#000000"
            android:textSize="17dp"
            android:text="나의 고민"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center"
        android:text="새 학기에 새로운 친구를\n사귀는게 너무 힘들어요.."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:background="@drawable/worry_bg" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/whale"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/whale_img"
                android:layout_marginTop="370dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/whale"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="17dp"
                android:text="힘내세요!"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>